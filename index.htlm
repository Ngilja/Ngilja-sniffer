<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>üòá Vrai ou Faux ? ‚ùå</title>
  <style>
    body {
      font-family: 'Poppins', sans-serif;
      margin: 0;
      padding: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      color: #fff;
      background: linear-gradient(270deg, #ff416c, #ff4b2b, #1e3c72, #2a5298);
      background-size: 800% 800%;
      animation: gradientBG 12s ease infinite;
    }

    @keyframes gradientBG {
      0% {background-position: 0% 50%;}
      50% {background-position: 100% 50%;}
      100% {background-position: 0% 50%;}
    }

    .container {
      width: 90%;
      max-width: 500px;
      background: rgba(0,0,0,0.6);
      padding: 20px;
      border-radius: 20px;
      box-shadow: 0 10px 25px rgba(0,0,0,0.5);
      text-align: center;
      display: none;
      animation: fadeIn 1s ease-in-out;
    }

    .intro {
      font-size: 20px;
      font-weight: bold;
      animation: pulse 1.5s infinite;
    }

    @keyframes pulse {
      0% { transform: scale(1); color: #fff; }
      50% { transform: scale(1.1); color: #ffea00; }
      100% { transform: scale(1); color: #fff; }
    }

    .progress {
      display: flex;
      justify-content: center;
      gap: 5px;
      margin: 15px 0;
      flex-wrap: wrap;
    }

    .dot {
      width: 25px;
      height: 25px;
      border-radius: 50%;
      background: #777;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 14px;
      color: white;
    }
    .dot.active { background: #28a745; }

    .question {
      font-size: 20px;
      margin: 20px 0;
      font-weight: bold;
    }

    .btn {
      display: inline-block;
      width: 40%;
      padding: 12px;
      margin: 10px;
      border-radius: 12px;
      font-size: 18px;
      cursor: pointer;
      transition: 0.3s;
      border: none;
    }
    .true { background: #28a745; color: white; }
    .false { background: #dc3545; color: white; }
    .btn:hover { opacity: 0.85; }

    .hidden { display: none; }

    .result { font-size: 22px; margin: 20px 0; }
    .share {
      background: #25d366;
      color: white;
      padding: 12px 20px;
      border-radius: 12px;
      cursor: pointer;
      text-decoration: none;
      display: inline-block;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
  </style>
</head>
<body>

<!-- Sons -->
<audio id="clickSound" src="https://www.myinstants.com/media/sounds/click.mp3"></audio>

<div id="intro" class="container" style="display:block;">
  <div class="intro">√ëƒûƒÆƒªJ√É_√ëƒ™J VOUS REMERCIE POUR VOTRE ENCOURAGEMENT ‚úÖÔ∏èüÜñÔ∏èü•∑üèº‚ú®Ô∏è</div>
  <p>Laissez un petit message d‚Äôencouragement üí¨</p>
  <button class="btn true" onclick="startCreator()">Cr√©er mon quiz</button>
  <button class="btn false" onclick="startQuiz()">Jouer</button>
</div>

<div id="creator" class="container">
  <h2>Cr√©er ton quiz üòç</h2>
  <input type="text" id="creatorName" placeholder="Ton pr√©nom" style="padding:10px;border-radius:8px;width:80%;">
  <p>Choisis tes r√©ponses (Vrai/Faux)</p>
  <div id="creatorQuestions"></div>
  <button class="btn true" onclick="generateLink()">Partager mon quiz</button>
</div>

<div id="quiz" class="container">
  <h2>üòá Vrai ou Faux ? ‚ùå</h2>
  <div class="progress" id="progress"></div>
  <div class="question" id="question"></div>
  <button class="btn true" onclick="answer(true)">‚úÖ Vrai</button>
  <button class="btn false" onclick="answer(false)">‚ùå Faux</button>
</div>

<div id="result" class="container">
  <div class="result" id="score"></div>
  <a class="share" id="shareBtn" target="_blank">Partager sur WhatsApp</a>
  <br><br>
  <button class="btn true" onclick="restart()">Cr√©er ton propre quiz</button>
</div>

<script>
  const questions = [
    "croit aux fant√¥mes ?",
    "a d√©j√† eu le b√©guin pour un prof ?",
    "a peur du noir ?",
    "aime les films d‚Äôhorreur ?",
    "a d√©j√† trich√© √† un examen ?",
    "aime les animaux ?",
    "croit au coup de foudre ?",
    "pr√©f√®re le chat ?",
    "chante sous la douche ?",
    "a d√©j√† pleur√© devant un film ?"
  ];

  let creatorAnswers = [];
  let playerAnswers = [];
  let currentQuestion = 0;
  let playerName = "";
  let creatorMode = false;

  const clickSound = document.getElementById("clickSound");

  function playSound() {
    clickSound.currentTime = 0;
    clickSound.play();
  }

  function startCreator() {
    playSound();
    document.getElementById("intro").style.display = "none";
    document.getElementById("creator").style.display = "block";
    const cq = document.getElementById("creatorQuestions");
    cq.innerHTML = "";
    questions.forEach((q,i)=>{
      cq.innerHTML += `
        <p>${i+1}. Je ${q}</p>
        <button class="btn true" onclick="setAnswer(${i},true)">‚úÖ Vrai</button>
        <button class="btn false" onclick="setAnswer(${i},false)">‚ùå Faux</button>
      `;
    });
    creatorMode = true;
  }

  function setAnswer(i, val) {
    playSound();
    creatorAnswers[i] = val;
  }

  function generateLink() {
    playSound();
    const name = document.getElementById("creatorName").value || "Moi";
    const data = btoa(JSON.stringify(creatorAnswers));
    const link = `${window.location.origin}${window.location.pathname}?nom=${encodeURIComponent(name)}&quiz=${data}`;
    alert("Lien pr√™t : " + link);
    window.open("https://wa.me/?text=" + encodeURIComponent("üòá Vrai ou Faux ? ‚ùå\nD√©couvre si tu connais " + name + " üëâ " + link), "_blank");
  }

  function startQuiz() {
    playSound();
    const params = new URLSearchParams(window.location.search);
    playerName = params.get("nom") || "Ton ami";
    const data = params.get("quiz");
    if(data){
      creatorAnswers = JSON.parse(atob(data));
    }
    document.getElementById("intro").style.display = "none";
    document.getElementById("quiz").style.display = "block";
    loadQuestion();
  }

  function loadQuestion() {
    if(currentQuestion >= questions.length) {
      showResult();
      return;
    }
    document.getElementById("question").innerText = `Est-ce que ${playerName} ${questions[currentQuestion]}`;
    const progress = document.getElementById("progress");
    progress.innerHTML = "";
    for(let i=0;i<questions.length;i++){
      progress.innerHTML += `<div class="dot ${i===currentQuestion?"active":""}">${i+1}</div>`;
    }
  }

  function answer(val) {
    playSound();
    playerAnswers.push(val);
    currentQuestion++;
    loadQuestion();
  }

  function showResult() {
    playSound();
    document.getElementById("quiz").style.display = "none";
    document.getElementById("result").style.display = "block";
    let score = 0;
    for(let i=0;i<questions.length;i++){
      if(playerAnswers[i] === creatorAnswers[i]) score++;
    }
    document.getElementById("score").innerText = `üî• Tu connais ${playerName} √† ${score}/${questions.length} !`;
    document.getElementById("shareBtn").href = "https://wa.me/?text=" + encodeURIComponent("üî• J‚Äôai eu " + score + "/" + questions.length + " en connaissant " + playerName + " ! Essaye aussi üëâ " + window.location.href);
  }

  function restart() {
    playSound();
    window.location.href = window.location.origin + window.location.pathname;
  }
</script>

</body>
</html>